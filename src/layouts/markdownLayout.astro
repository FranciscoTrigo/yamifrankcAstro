---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
dayjs.extend(utc);
import expressiveCode, { ExpressiveCodeTheme } from 'astro-expressive-code';
import '../styles/global.css';
import '../styles/prism-dark.css';
import Navigation from '../components/Navigation.astro';
import Foot from '../components/Foot.astro';

const { frontmatter, content } = Astro.props;
---
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/iosevka@16.0.0/dist/iosevka.css">


<title>{frontmatter.title}</title>
<Navigation />

<h1>{frontmatter.title}</h1>
<!-- <h2>{frontmatter.subtitle}</h2> -->

<!-- This block currently breaks ORG -->
Tags: <ul class="tag-list">
{frontmatter.tags.map(tag => (
  <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>
  ))}
</ul> 

<!-- End of block that braks org -->
<slot />

<p><a href={`mailto:comments@yamifrankc.com?subject=Re:"${frontmatter.title}"`}>Email me about this post.</a></p>

<Foot />