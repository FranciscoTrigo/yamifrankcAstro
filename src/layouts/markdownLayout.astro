---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
dayjs.extend(utc);

const lastModified = dayjs()
  .utc(Astro.props.frontmatter.lastModified)
  .format("YYYY-MM-DD HH:mm");

import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Foot from '../components/Foot.astro';

const { frontmatter, content } = Astro.props;

const posts = await Astro.glob('/src/pages/**/*.md'); // Load all Markdown files
const currentPath = Astro.url.pathname; // Get the current page path

// Find the matching file based on the URL
const currentPost = posts.find(post => post.url === currentPath);

// Construct the GitHub link based on the file path
const githubLink = currentPost ? `https://github.com/FranciscoTrigo/yamifrankcAstro/blob/main/${currentPost.file}` : '#';
---



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/iosevka@16.0.0/dist/iosevka.css">

<title>{frontmatter.title}</title>
<Navigation />

<h1>{frontmatter.title}</h1>

<p>Published: {new Date(frontmatter.datePublished).toISOString().split('T')[0]}</p>
<p>Last modified: {lastModified}</p>

<slot />

